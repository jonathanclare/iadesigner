{
  "author": "Jonathan Clare jonathan.clare@geowise.co.uk>",
  "version": "0.0.132",
  "name": "iadesigner",
  "homepage": "http://www.instantatlas.com/",
  "title": "InstantAtlas Designer",
  "description": "Interactive Mapping and Reporting Services",
  "dir": {
    "src": "src",
    "build": "build",
    "website": "build-website",
    "dist": "dist",
    "deploy": "deploy"
  },
  "keywords": [
    "InstantAtlas",
    "mapping",
    "charts",
    "svg",
    "canvas",
    "html5",
    "graph"
  ],
  "dependencies": {
    "electron-log": "^1.3.0",
    "electron-updater": "^2.4.3",
    "electron-window-state": "^4.1.1",
    "jsonfile": "^4.0.0",
    "mkdirp": "^0.5.1"
  },
  "devDependencies": {
    "electron": "^1.6.1",
    "electron-builder": "^19.8.0",
    "grunt": "^0.4.5",
    "grunt-bump": "^0.8.0",
    "grunt-compile-handlebars": "^2.0.2",
    "grunt-contrib-clean": "^0.6.0",
    "grunt-contrib-compress": "^0.14.0",
    "grunt-contrib-concat": "^0.5.1",
    "grunt-contrib-copy": "^0.8.1",
    "grunt-contrib-cssmin": "^1.0.1",
    "grunt-contrib-handlebars": "^1.0.0",
    "grunt-contrib-htmlmin": "^2.0.0",
    "grunt-contrib-jshint": "^0.11.3",
    "grunt-contrib-less": "^1.4.0",
    "grunt-contrib-uglify": "^0.9.2",
    "grunt-contrib-watch": "^0.6.1",
    "grunt-ftp-deploy": "^0.1.10",
    "grunt-groundskeeper": "^0.1.11",
    "grunt-processhtml": "^0.3.8",
    "grunt-todos": "^0.3.0"
  },
  "main": "./build/main.js",
  "scripts": {
    "start": "electron ./src/main.js",
    "postinstall": "electron-builder install-app-deps && grunt build && npm start",
    "pack": "electron-builder --dir",
    "dist": "grunt build && build --win --ia32 --x64",
    "dist:web": "grunt build && grunt clean:dist && build --win nsis-web --ia32 --x64 && grunt copy:latest",
    "dist:prerelease": "grunt bump:prerelease && npm run dist:web",
    "dist:prepatch": "grunt bump:prepatch && npm run dist:web",
    "dist:preminor": "grunt bump:preminor && npm run dist:web",
    "dist:premajor": "grunt bump:premajor && npm run dist:web",
    "dist:patch": "grunt bump:patch && npm run dist:web",
    "dist:minor": "grunt bump:minor && npm run dist:web",
    "dist:major": "grunt bump:major && npm run dist:web",
    "dist:version": "grunt bump --setversion=2.0.1 && npm run dist:web"
  },
  "build": {
    "publish": [
      {
        "provider": "generic",
        "url": "https://online.instantatlas.com/designer/"
      }
    ],
    "appId": "com.instantatlas.iadesigner",
    "productName": "InstantAtlas Designer",
    "win": {
      "target": "nsis",
      "icon": "./build/assets/ia.ico"
    },
    "nsis": {
      "perMachine": true,
      "oneClick": false
    },
    "files": [
      "./build/**/*"
    ]
  }
}
