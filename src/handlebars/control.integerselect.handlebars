<div class="form-group iad-form-group" data-control-id="{{id}}">
	<div class="control-label">
		{{#ifStartsWith description 'popover:'}}
        <span class="iad-popover-control"><i class="hover-opaque fa fa-fw fa-question-circle iad-popover" data-toggle="popover" data-trigger="click" data-content="{{substring description 8}}" data-title="{{name}}" data-container="body"></i> {{name}}</span>
        {{else}}
        <span class="iad-tooltip-control" data-toggle="tooltip" title="{{description}}">{{name}}</span>
        {{/ifStartsWith}}
	</div>
	<div>
		<select class="form-control input-sm iad-control-integer-select">
				<option value="-1" {{#ifEqualTo -1 this.value}}selected="true"{{/ifEqualTo}}>-</option>
				<option value="0" {{#ifEqualTo 0 this.value}}selected="true"{{/ifEqualTo}}>0</option>
				<option value="1" {{#ifEqualTo 1 this.value}}selected="true"{{/ifEqualTo}}>1</option>
				<option value="2" {{#ifEqualTo 2 this.value}}selected="true"{{/ifEqualTo}}>2</option>
				<option value="3" {{#ifEqualTo 3 this.value}}selected="true"{{/ifEqualTo}}>3</option>
				<option value="4" {{#ifEqualTo 4 this.value}}selected="true"{{/ifEqualTo}}>4</option>
				<option value="5" {{#ifEqualTo 5 this.value}}selected="true"{{/ifEqualTo}}>5</option>
				<option value="6" {{#ifEqualTo 6 this.value}}selected="true"{{/ifEqualTo}}>6</option>
				<option value="7" {{#ifEqualTo 7 this.value}}selected="true"{{/ifEqualTo}}>7</option>
				<option value="8" {{#ifEqualTo 8 this.value}}selected="true"{{/ifEqualTo}}>8</option>
				<option value="9" {{#ifEqualTo 9 this.value}}selected="true"{{/ifEqualTo}}>9</option>
				<option value="10" {{#ifEqualTo 10 this.value}}selected="true"{{/ifEqualTo}}>10</option>
		</select>
	</div>
</div>