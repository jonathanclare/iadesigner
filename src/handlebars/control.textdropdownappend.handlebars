<div class="control-label">
    {{#if description}}<i class="fa fa-fw fa-question-circle iad-popover" data-toggle="popover" data-trigger="click" data-content="{{description}}" data-container="body"></i>&nbsp;{{/if}}{{name}}
</div>
<div>
	<div class="input-group">
		<input class="form-control input-sm iad-control-text" type="text" value="{{value}}">
		<div class="input-group-btn">
			<button type="button" class="btn btn-sm btn-default dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></button>
			<ul class="dropdown-menu pull-right iad-dropdown-menu-append">
				{{#each choices}}
					{{#if this.divider}}
						<li class="divider"></li>
					{{/if}}
					{{#if this.header}}
						<li class="dropdown-header">{{this.header}}</li>
					{{/if}}
					{{#if this.value}}
						<li class="iad-dropdown-option"><a href="#" data-value="{{this.value}}">{{this.label}}</a></li>
					{{/if}}
				{{/each}}
			</ul>
		</div>
	</div>
</div>
